<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="26-10-2019"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/datebtn"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="All"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/allbtn"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="PENDING"
            android:textColor="@color/completed"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="ONGOING"
            android:textColor="@color/ongoing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="35dp"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="COMPLETED"
            android:textColor="@color/pending"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:id="@+id/linear2">

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/pendingall"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/ongoingall"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="49dp"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/completedall"
            android:text="0"
            android:layout_marginStart="55dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/barchartrecycler"/>


</LinearLayout>